    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "g++ -g -std=c++11 ${file}",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}